<div style="height: 60vh;">

  <table class="table">
    <thead>
      <tr>
        <th>Client ID</th>
        <th>Name</th>
        <th>City</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.client_id %></td>
          <td><%= client.name %></td>
          <td><%= City.find(client.city_id).name %></td>
          <td>
            <%= link_to 'Edit', edit_client_path(client), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to 'Delete', client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>