<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pass %>
    <%= f.password_field :pass, class: 'form-control' %>
  </div>
  <%= f.submit 'Log in', class: 'btn btn-primary' %>
<% end %>