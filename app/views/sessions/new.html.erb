<div class="my-5 d-flex justify-content-center">
  <div class="px-3 py-4 bg-dark border rounded-3">
    <h2 class="text-center text-primary">Log in</h2>
    <%= form_with scope: :session, url: sign_in_path, class: "form-group row" do |form| %>
      <div class="my-1">
        <%= form.email_field :email, name: "session[email]", class: "form-control", placeholder: "Email" %>
      </div>
      <div class="my-1">
        <%= form.password_field :pass, name: "session[pass]", class: "form-control", placeholder: "Password" %>
      </div>
      <div class="my-1 d-flex justify-content-end">
        <%= form.submit 'Sign in', class: "btn btn-primary" %>
      </div>
    <% end %> 
  </div>
</div>