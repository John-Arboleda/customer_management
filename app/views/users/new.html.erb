<div class="my-5 d-flex justify-content-center">
  <div class="px-3 py-4 bg-dark border rounded-3">

  <h2 class="text-center text-primary">Sign up</h2>
  <%= form_with model: @user, url: users_path, class: "form-group row" do |form| %>
      <div class="my-1">
        <%= form.text_field :name, name: "user[name]", class: "form-control", placeholder: "Name" %>
      </div>
      <div class="my-1">
        <%= form.email_field :email, name: "user[email]", class: "form-control", placeholder: "Email" %>
      </div>
      <div class="my-1">
        <%= form.password_field :pass, name: "user[pass]", class: "form-control", placeholder: "Password" %>
      </div>
      <div class="my-1 d-flex justify-content-between">
        <p class="text-primary">Already have an account? <%= link_to 'Sign in', sign_in_path %></p>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>