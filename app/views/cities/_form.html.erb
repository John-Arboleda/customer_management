<%= form_with model: @city, class: "form-group row" do |form| %>
  <div class="my-1">
    <%= form.text_field :name, name: "city[name]", class: "form-control", placeholder: "Add a new city" %>
  </div>
  <div class="my-1 d-flex justify-content-end">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
